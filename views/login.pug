doctype html
html
  head
    title Login
    link(rel="stylesheet", href="/style.css")
    script(src="/login.js")
  body
    nav 
      div 
        a(href="/") DressUp Doll
      div 
        a(href="/newAccount") Create Account
    h1 Login Page

    form#loginForm
      label(for="email") Email:
      input(type="email", id="email", name="email", required)
      br
      label(for="password") Password:
      input(type="password", id="password", name="password", required)
      br
      button(type="submit", id="loginBtn") Login

    p#loginMessage(style="color:red")

    // Link to the new account creation page
    p
      a(href="/newAccount") Don't have an account? Create one here.
